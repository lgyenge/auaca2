{
  "$schema": "../../../../extension.schema.json",
  "$id": "au-templates",
  "$version": "1.0.0",
  "$vendor": "Your name or company name",
  "$name": "plugin1",
  "$description": "demo plugin",
  "$license": "MIT",
  "$app.navigation.isNotTrashcan":"",


  "rules": [
    {
      "id": "flsrv.canCreateArea",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "app.navigation.folder.canCreate" },
        { "type": "rule", "value": "flsrv.navigation.isFlAreas" }
      ]
    },
    {
      "id": "au.canCreatePage",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "au.navigation.isAuTemplate" },
        { "type": "rule", "value": "au.isAuPageSelected" }
      ]
    }

  ],

  "routes": [
    {
      "id": "au.extension.route",
      "path": "ext/au/route",
      "component": "au-templates.main.component"
    }
  ],

  "features": {
    "navbar": [
      {
        "id": "au.extension.nav",
        "items": [
          {
            "id": "au.extension.main",
            "icon": "extension",
            "title": "au Extension",
            "route": "templates"
          }
        ]
      }
    ],
    "toolbar": [
      {
        "disabled": false,
        "id": "au.toolbar.canCreatePage",
        "type": "button",
        "order": 10,
        "title": "Új",
        "description": "Új",
        "icon": "add",
        "actions": {
          "click": "FL_CREATE_AREA"
        },
        "rules": {
          "visible": "au.canCreatePage"
        }
      }

    ]


  }
}
