{
  "$schema": "../../../../extension.schema.json",
  "$id": "au-templates",
  "$version": "1.0.0",
  "$vendor": "Dinet Kft",
  "$name": "auplugin",
  "$description": "au plugin",
  "$license": "MIT",
  "$app.navigation.isNotTrashcan":"",


  "rules": [
    {
      "id": "flsrv.canCreateArea",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "app.navigation.folder.canCreate" },
        { "type": "rule", "value": "flsrv.navigation.isFlAreas" }
      ]
    },
    {
      "id": "au.template.canCreate",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "au.isAuTemplates" }
      ]
    },
    {
      "id": "au.page.canCreate",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "au.isAuTemplate" },
        { "type": "rule", "value": "au.isAuPageSelected" }
      ]
    },
    {
      "id": "au.section.canCreate",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "au.isAuTemplate" },
        { "type": "rule", "value": "au.isAuSectionSelected" }
      ]
    },
    {
      "id": "au.item.canCreate",
      "type": "core.every",
      "parameters": [
        { "type": "rule", "value": "au.isAuTemplate" },
        { "type": "rule", "value": "au.isAuItemQuestionSelected" }
      ]
    }


  ],

  "routes": [
    {
      "id": "au.extension.route",
      "path": "ext/au/route",
      "component": "au-templates.main.component"
    }
  ],

  "features": {
    "navbar": [
      {
        "id": "au.extension.nav",
        "items": [
          {
            "id": "au.extension.main",
            "icon": "extension",
            "title": "au Extension",
            "route": "templates"
          }
        ]
      }
    ],
    "toolbar": [
      {
        "id": "au.toolbar.create",
        "type": "menu",
        "order": 15,
        "title": "APP.HEADER.BUTTONS.CREATE",
        "description": "APP.HEADER.BUTTONS.CREATE_TOOLTIP",
        "data": {
          "menuType": "flat-button",
          "color": "primary"
        },
        "children": [
          {
            "id": "au.create.template",
            "order": 100,
            "icon": "create_new_folder",
            "title": "New template",
            "description": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER",
            "description-disabled": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER_NOT_ALLOWED",
            "actions": {
              "click": "[AuTempl] Add AuTempl"
            },
            "rules": {
              "visible": "au.template.canCreate"
            }
          }
        ]
      },
      {
        "disabled": false,
        "id": "au.toolbar.canCreatePage",
        "type": "button",
        "order": 10,
        "title": "Új",
        "description": "Új",
        "icon": "add",
        "actions": {
          "click": "FL_CREATE_AREA"
        },
        "rules": {
          "visible": "au.page.canCreate"
        }
      },
      {
        "id": "au.toolbar.createItem",
        "type": "menu",
        "order": 10,
        "title": "APP.HEADER.BUTTONS.CREATE",
        "description": "APP.HEADER.BUTTONS.CREATE_TOOLTIP",
        "data": {
          "menuType": "flat-button",
          "color": "primary"
        },
        "children": [
          {
            "id": "au.create.page",
            "order": 100,
            "icon": "create_new_folder",
            "title": "New Page",
            "description": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER",
            "description-disabled": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER_NOT_ALLOWED",
            "actions": {
              "click": "[AuTempl/API] Add AuPage"
            },
            "rules": {
              "visible": "au.page.canCreate"
            }
          },
          {
            "id": "au.create.section",
            "order": 200,
            "icon": "create_new_folder",
            "title": "New Section",
            "description": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER",
            "description-disabled": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER_NOT_ALLOWED",
            "actions": {
              "click": "[AuTempl] Add AuTempl"
            },
            "rules": {
              "visible": "au.section.canCreate"
            }
          },
          {
            "id": "au.create.item",
            "order": 300,
            "icon": "create_new_folder",
            "title": "New question",
            "description": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER",
            "description-disabled": "APP.NEW_MENU.TOOLTIPS.CREATE_FOLDER_NOT_ALLOWED",
            "actions": {
              "click": "[AuTempl] Add AuTempl"
            },
            "rules": {
              "visible": "au.item.canCreate"
            }
          }


        ]
      }


    ]


  }
}
